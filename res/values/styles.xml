<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTextView_Title">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTextView_Content">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">@dimen/text_size_content</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTextView_Content_Small">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">@dimen/text_size_content_small</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/ripple_button</item>
        <item name="android:textColor">@color/colorTextPrimaryInvert</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppCardView" parent="CardView">
        <item name="cardCornerRadius">3dp</item>
        <item name="cardBackgroundColor">@color/backgroundPrimary</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">10dp</item>
        <item name="android:elevation" tools:targetApi="lollipop">20dp</item>

    </style>

</resources>

