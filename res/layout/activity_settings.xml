<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="rish.crearo.navdrawerbase.Settings">

    <include
        android:id="@+id/settings_tool_bar"
        layout="@layout/tool_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <TextView
            style="@style/AppTextView_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="General" />

        <TextView
            style="@style/AppTextView_Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Specify general behaviour throughout the app" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="5dp"
        android:alpha="0.3"
        android:background="@color/colorTextSecondary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <TextView
            style="@style/AppTextView_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notifications" />

        <TextView
            style="@style/AppTextView_Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set options for Notifications" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="5dp"
        android:alpha="0.3"
        android:background="@color/colorTextSecondary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <TextView
            style="@style/AppTextView_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Others" />

        <TextView
            style="@style/AppTextView_Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Specify other silly details" />

    </LinearLayout>

</LinearLayout>